@model Micro_Social_Platform.Models.Group

<h2 class="text-center mt-5">Add new group</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Groups", method: FormMethod.Post))
            {
                @Html.ValidationSummary(false, "", new{ @class = "text-danger"})

                @Html.Label("GroupName", "Group Name")
                <br />
                @Html.TextBox("GroupName", null,  new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.GroupName, "", new { @class = "text-danger" })

                <br />

                <br />

                @Html.Label("Description", "Group Description")
                <br />
                @Html.TextArea("Description", null, new { @class = "form-control" })

                @Html.ValidationMessage("Description", null, new { @class = "text-danger" })

                <br />

                <br />

                <button class="btn btn-success" type="submit">Add group</button>
            }
        </div>
    </div>
</div>