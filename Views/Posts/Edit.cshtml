@{
    ViewBag.Title = "Edit";
}
@model Micro_Social_Platform.Models.Post
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Posts", routeValues: new { id = Model.Id }))
            {
                @Html.ValidationSummary(false, "", new{@class ="text-danger"})
                @Html.Label("Content", "Post Content")

                <br />
                <br />
                <div class="ptsummer">
                    @Html.TextArea("Content", Model.Content, new {@class = "summernote"})
                </div>



                @Html.ValidationMessage("Content", null, new {@class = "text-danger"})

                <br />
                <br />

                <button class="btn btn-success" type="submit">Edit Post</button>
            }
        </div>
    </div>
</div>