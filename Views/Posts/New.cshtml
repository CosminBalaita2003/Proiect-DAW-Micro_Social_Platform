@model Micro_Social_Platform.Models.Post

<h2 class="text-center mt-5">Add New Post</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            @using (Html.BeginForm(actionName: "New", controllerName: "Posts", method: FormMethod.Post))
            {
                @Html.ValidationSummary(false,"", new{ @class = "text-danger"})

                @Html.Label("Content", "Post Content")

                <br />
                <div class="ptsummer">
                    @Html.TextArea("Content", null, new {@class = "summernote"})
                </div>

                @Html.ValidationMessage("Content", null, new{@class = "text-danger"})
                <br />

                <br />

                <button class="btn btn-success" type="submit">Add Post</button>
            }
        </div>
    </div>
</div>